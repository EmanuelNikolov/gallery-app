{% extends 'admin/base.html.twig' %}

{% block title %}Съобщения{% endblock %}

{% block body %}
    <div class="container text-center">
        <h1 class="mb-4">Потребителски съобщения</h1>
        <div class="row text-center">
            {% for message in pagination %}
                <div class="col-12 col-md-6">
                    <div class="card border-secondary mb-3">
                        <div class="card-header text-left">{{ message.name }}</div>
                        <div class="card-body">
                            <p><a href="mailto:{{ message.email }}">{{ message.email }}</a></p>
                            <p class="card-text">{{ message.content }}</p>
                        </div>
                        <div class="card-footer text-secondary d-flex justify-content-between align-items-center">
                            {{ message.createdOn|date('d/m/Y H:i:s') }}
                            {{ include('admin/message/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 col-md-6 mx-auto">
                    <p>Няма съобщения за преглеждане.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
