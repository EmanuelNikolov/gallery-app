{% for row in pagination|batch(5) %}
    <div class="row justify-content-around align-items-end">
        {% for photo in row %}
            <div class="col-12 col-md-7 col-lg-2 mb-3 d-flex flex-column justify-content-center align-items-center">
                <a href="{{ path((base is defined ? base ~ '_' : '') ~ 'photo_show', {'id': photo.id}) }}">
                    <img class="img-fluid rounded mb-2" src="{{ asset('uploads/img/' ~ photo.path) }}">
                </a>
                    {{ include('photo/_delete_form.html.twig') }}
            </div>
        {% endfor %}
    </div>
{% else %}
    <p class="text-center">Още няма добавени снимки :(</p>
{% endfor %}
{% block paginator %}
    <div class="row justify-content-center align-items-center">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}


