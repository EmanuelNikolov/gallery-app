{% extends 'admin/base.html.twig' %}

{% block title %}{{ user.username }}{% endblock %}

{% block body %}
    <div class="container text-center mb-4">
        <h1 class="mb-4">{{ user.username }}</h1>
        <div class="row mb-3">
            <div class="col-12 col-md-5 mx-auto">
                <div class="card border-secondary mb-3">
                    <div class="card-header">Информация за потребителя</div>
                    <div class="card-body">
                        <p class="card-text">Дата на регистрация: {{ user.createdOn|date('d/m/Y H:i:s') }}</p>
                        <p class="card-text">Брой снимки: {{ user.photos|length }}</p>
                    </div>
                </div>
            </div>
        </div>
        {% embed 'photo/_list.html.twig' with {'pagination': user.photos} %}
            {% block paginator %}{% endblock %}
        {% endembed %}
    </div>
{% endblock %}
